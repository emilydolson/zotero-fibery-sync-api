{
  "id": "zotero-fibery-app",
  "name": "Zotero",
  "version": "0.1",
  "description": "Integrate Zotero library into Fibery",
  "authentication": [
    {
      "id": "public",
      "name": "Public Access",
      "description": "There is no any authentication required",
      "fields": []
    },
    {
      "description": "Provide Token",
      "name": "Token Authentication",
      "id": "token",
      "fields": [
          {
              "type": "text",
              "description": "Personal Token",
              "id": "token"
          }
      ]
    }
  ],
  "sources": [],
  "responsibleFor": {
    "dataSynchronization": true,
    "automations": true
  },
  "actions": [
    {
      "action": "add-new-paper",
      "name": "Add new paper to Zotero library",
      "args": [{"id":"doi", "name":"DOI", "type":"text"}]
    }
  ]
}
